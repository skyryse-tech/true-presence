# ===============================================
# FACE ATTENDANCE SYSTEM - ENVIRONMENT CONFIGURATION
# ===============================================

# ===============================================
# Django Configuration
# ===============================================
DEBUG=False
SECRET_KEY=your-super-secret-django-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,*.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# Time Zone & Internationalization
TIME_ZONE=UTC
LANGUAGE_CODE=en-us
USE_TZ=True

# ===============================================
# Database Configuration (PostgreSQL)
# ===============================================
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=face_attendance
DATABASE_USER=face_user
DATABASE_PASSWORD=secure_database_password_change_this
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_CONN_MAX_AGE=600

# Database Read Replica (Optional)
DATABASE_REPLICA_HOST=localhost
DATABASE_REPLICA_PORT=5432

# ===============================================
# Redis Configuration
# ===============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_DB_CACHE=0
REDIS_DB_SESSIONS=1
REDIS_DB_CELERY=2
REDIS_DB_AI_CACHE=3

# Redis URLs
REDIS_URL=redis://:secure_redis_password_change_this@localhost:6379/0
CELERY_BROKER_URL=redis://:secure_redis_password_change_this@localhost:6379/2
CELERY_RESULT_BACKEND=redis://:secure_redis_password_change_this@localhost:6379/2

# ===============================================
# Message Queue (RabbitMQ)
# ===============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq_password_change_this
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://admin:rabbitmq_password_change_this@localhost:5672//

# ===============================================
# AI/ML Configuration
# ===============================================

# GPU Configuration
CUDA_DEVICE=0
CUDA_VISIBLE_DEVICES=0,1
GPU_MEMORY_FRACTION=0.8
TENSORRT_ENABLED=True

# Model Paths
AI_MODELS_PATH=/app/models
FACE_DETECTION_MODEL=mtcnn
FACE_RECOGNITION_MODEL=arcface
ANTI_SPOOFING_MODEL=silent_face
QUALITY_ASSESSMENT_MODEL=custom_cnn

# AI Processing Settings
FACE_DETECTION_THRESHOLD=0.9
FACE_RECOGNITION_THRESHOLD=0.85
ANTI_SPOOFING_THRESHOLD=0.95
BATCH_SIZE=32
MAX_FACES_PER_IMAGE=10

# Model Optimization
ONNX_OPTIMIZATION=True
TENSORRT_PRECISION=FP16
MODEL_QUANTIZATION=True

# ===============================================
# Camera Configuration
# ===============================================

# Default Camera Settings
DEFAULT_CAMERA_RESOLUTION=1920x1080
DEFAULT_CAMERA_FPS=30
CAMERA_TIMEOUT=30
RTSP_TIMEOUT=10

# Streaming Configuration
STREAM_QUALITY=high
STREAM_COMPRESSION=h264
WEBRTC_ENABLED=True
CAMERA_BUFFER_SIZE=10

# ===============================================
# Security Configuration
# ===============================================

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this-immediately
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=86400
JWT_ROTATE_REFRESH_TOKENS=True

# OAuth Configuration
OAUTH_GOOGLE_CLIENT_ID=your-google-oauth-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
OAUTH_MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
OAUTH_MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret

# Encryption Keys
FIELD_ENCRYPTION_KEY=your-field-encryption-key-32-chars
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-32

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===============================================
# Email Configuration
# ===============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===============================================
# Storage Configuration
# ===============================================

# Static & Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media

# Object Storage (MinIO/S3)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=face-attendance-storage
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minio_password_change_this
MINIO_BUCKET_NAME=face-attendance
MINIO_USE_HTTPS=False

# ===============================================
# Monitoring & Logging
# ===============================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE=/app/logs/face_attendance.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Prometheus Metrics
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=8001

# Health Checks
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_DATABASE=True
HEALTH_CHECK_CACHE=True
HEALTH_CHECK_DISK_USAGE_MAX=90

# ===============================================
# External Services
# ===============================================

# InfluxDB (Time Series Database)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=face_attendance
INFLUXDB_BUCKET=metrics

# Elasticsearch (Logging)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elastic_password_change_this

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key

# ===============================================
# Backup Configuration
# ===============================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=face-attendance-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# ===============================================
# Performance Tuning
# ===============================================

# Database Connection Pool
DATABASE_CONN_MAX_AGE=600
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Cache Settings
CACHE_TIMEOUT=3600
CACHE_KEY_PREFIX=face_attendance
CACHE_VERSION=1

# Celery Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# ===============================================
# Development Settings
# ===============================================

# Development Only (Set to False in production)
ENABLE_DEBUG_TOOLBAR=False
ENABLE_SILK_PROFILING=False
ALLOW_UNSAFE_HEADERS=False

# Test Settings
TEST_DATABASE_NAME=test_face_attendance
PYTEST_COVERAGE_THRESHOLD=80

# ===============================================
# Feature Flags
# ===============================================

# AI Features
ENABLE_FACE_DETECTION=True
ENABLE_FACE_RECOGNITION=True
ENABLE_ANTI_SPOOFING=True
ENABLE_QUALITY_ASSESSMENT=True
ENABLE_EDGE_PROCESSING=False

# API Features
ENABLE_BULK_OPERATIONS=True
ENABLE_WEBHOOK_NOTIFICATIONS=True
ENABLE_REAL_TIME_UPDATES=True
ENABLE_MOBILE_API=True

# Security Features
ENABLE_TWO_FACTOR_AUTH=False
ENABLE_IP_WHITELISTING=False
ENABLE_AUDIT_LOGGING=True
ENABLE_DATA_ENCRYPTION=True

# Experimental Features
ENABLE_FEDERATED_LEARNING=False
ENABLE_QUANTUM_ENCRYPTION=False
ENABLE_NEURAL_COMPRESSION=False

# ===============================================
# Compliance & Privacy
# ===============================================

# GDPR Settings
GDPR_COMPLIANCE_ENABLED=True
DATA_RETENTION_DAYS=2555
ALLOW_DATA_EXPORT=True
ALLOW_DATA_DELETION=True

# Privacy Settings
ANONYMIZE_FACE_DATA=True
ENCRYPT_PERSONAL_DATA=True
LOG_ACCESS_ATTEMPTS=True

# ===============================================
# Mobile App Configuration
# ===============================================
MOBILE_API_VERSION=v1
MOBILE_DEEP_LINKING_SCHEME=faceattendance
MOBILE_PUSH_NOTIFICATIONS=True
FCM_SERVER_KEY=your-fcm-server-key

# ===============================================
# Third-Party Integrations
# ===============================================

# LDAP/Active Directory
LDAP_ENABLED=False
LDAP_SERVER_URI=ldap://your-ldap-server.com
LDAP_BIND_DN=cn=admin,dc=yourdomain,dc=com
LDAP_BIND_PASSWORD=ldap_password
LDAP_USER_SEARCH_BASE=ou=users,dc=yourdomain,dc=com

# Single Sign-On (SSO)
SAML_ENABLED=False
SAML_ENTITY_ID=https://yourdomain.com/saml/metadata/
SAML_IDP_URL=https://your-idp.com/saml/sso
SAML_X509_CERT=your-saml-certificate

# HR System Integration
HR_SYSTEM_API_URL=https://hr-system.com/api/v1/
HR_SYSTEM_API_KEY=your-hr-system-api-key
SYNC_WITH_HR_SYSTEM=False

# ===============================================
# Load Balancing & Scaling
# ===============================================

# Nginx Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_CLIENT_MAX_BODY_SIZE=100M

# Auto Scaling
ENABLE_AUTO_SCALING=False
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# ===============================================
# Deployment Environment
# ===============================================
ENVIRONMENT=production
DEPLOYMENT_VERSION=1.0.0
BUILD_NUMBER=001
DEPLOYED_BY=github-actions
DEPLOYMENT_DATE=2024-01-01T00:00:00Z
